{
  "manifest_version": 3,
  "name": "Ditto",
  "version": "1.0.0",
  "description": "Quickly copy, edit, and manage your favorite URLs.",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": ["storage"],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
