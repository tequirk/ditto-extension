{
  "manifest_version": 3,
  "name": "Ditto",
  "version": "1.0.0",
  "description": "Quickly copy, edit, and manage your favorite URLs.",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y",
        "default": "Ctrl+Shift+Y"
      }
    }
  },
  "permissions": ["storage", "tabs", "activeTab", "scripting"],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
